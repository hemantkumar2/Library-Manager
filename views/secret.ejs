<%include partials/header%>
<form action="/books" method="POST">
  <input type="text" name="name" placeholder="name">
  <input type="text" name="image" placeholder="image url">
  <input type="text" name="description" placeholder="description">
  <button>Submit!</button>
</form>
<p><a href="/register">Sign up</a></p>
<p><a href="/login">login</a></p>
<p><a href="/logout">logout</a></p>



<div class="row" style="display:flex; flex-wrap:wrap;">
  <%books.forEach(function(book){%>

  <div class="col-md-4 col-lg-3 col-sm-6 text-center ">
    <div class="img-thumbnail">

      <img src="<%=book.image%>" style="width: 200px;">
      <div class="caption">
        <h4><%= book.name%> </h4>
      </div>
      <p><a class="btn btn-primary" href="/books/<%=book._id%>">More Info</a></p>
      <p><a class="btn btn-primary" href="/books/<%=book._id%>/edit">edit</a></p>

    </div>

  </div>
  <%})%>
</div>



<%include partials/footer%>