<div class="container">
  <div class="row" style="display:flex; flex-wrap:wrap;">
    <%books.forEach(function(book){%>
    <div class="col-md-4 col-lg-3 col-sm-6 text-center ">
      <div class="card mt-3">
        <div class=" card-header">
          <strong><%=book.name%></strong>
        </div>
        <div class="img-thumbnail">
          <img src="<%=book.image%>" class="card-img-top" alt="">
          <div class="caption">
            <h4><%= book.name%> </h4>
          </div>
          <form action="/books" method="POST">
            <span><a class="btn btn-sm btn-primary" href="/books/<%=book._id%>">Info</a></span>
            <span><a class="btn btn-sm btn-primary" href="/books/<%=book._id%>/edit">Edit</a></span>
            <!-- <p><a class="btn btn-primary" href="/books/<%=book._id%>">More Info</a></p>
              <p><a class="btn btn-primary" href="/books/<%=book._id%>/edit">edit</a></p> -->
            <span><a class="btn btn-sm btn-danger" href="/books/<%=book._id%>/delete"
                onclick="return confirm('are you sure you want to delete? ')">delete</a></span>
          </form>
        </div>
      </div>

    </div>
    <%})%>
  </div>
</div>

