<%include partials/header%>
<div class="ui main text container segment">
  <div class="ui huge header">Edit <%=book.name%></div>
  <form class="ui form" action="/books/<%=book._id%>" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="book[name]" value="<%=book.name%>">

    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="book[image]" value="<%=book.image%>">

    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="book[description]" id="" cols="30" rows="10"><%=book.description%></textarea>
    </div>

    <button class="ui button" type="submit">Submit</button>
  </form>
</div>


<%include partials/footer%>