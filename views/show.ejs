<%include partials/header%>

<div class="row">
  <div class="col text-center">

    <h1><%=book.name%></h1>

    <img class="mb-3" src="<%=book.image%>" alt="" style="width: 500px">

    <p><strong><%=book.description%></strong></p>
    <a class="btn btn-lg btn-dark" href="/books">Go back</a>
    <form action="/books" method="POST">
      <a href="/books/<%=book._id%>/delete" onclick="return confirm('are you sure you want to delete? ')">delete</a>
    </form>
  </div>
</div>